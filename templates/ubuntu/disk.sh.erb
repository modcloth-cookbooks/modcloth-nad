#!/usr/bin/env bash

PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games"

DATA="$(df / | tail -n 1)"

DISK_CAP="$(echo "$DATA" | awk '{print $2}')"
DISK_USED="$(echo "$DATA" | awk '{print $3}')"
PERC_USED="$(echo "$DATA" | awk '{print $5}' | awk -F"%" '{print $1}')"

PREFIX="unix:0:disk:"

echo -e "${PREFIX}disk_cap\tn\t${DISK_CAP}"
echo -e "${PREFIX}disk_used\tn\t${DISK_USED}"
echo -e "${PREFIX}disk_perc_used\tn\t${PERC_USED}"

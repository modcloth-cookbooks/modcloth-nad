#!/usr/bin/env bash

PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games"

read MEM_TOTAL MEM_USED SWAP_TOTAL SWAP_USED <<CMD
  $(free | awk 'NR==2{total=$2};NR==3{used=$3};NR==4{swap_total=$2;swap_used=$3} END{print total,used,swap_total,swap_used}')
CMD

MEM_FREE=$(( $MEM_TOTAL - $MEM_USED ))
MEM_PERC_USED=$(( $MEM_USED * 100 / $MEM_TOTAL ))

SWAP_FREE=$(( $SWAP_TOTAL - $SWAP_USED ))
SWAP_PERC_USED=$(( $SWAP_USED * 100 / $SWAP_TOTAL ))


PREFIX="unix:0:memory:"

echo -e "${PREFIX}mem_total\tn\t${MEM_TOTAL}"
echo -e "${PREFIX}mem_free\tn\t${MEM_FREE}"
echo -e "${PREFIX}mem_used\tn\t${MEM_USED}"
echo -e "${PREFIX}mem_perc_used\tn\t${MEM_PERC_USED}"

echo -e "${PREFIX}swap_total\tn\t${SWAP_TOTAL}"
echo -e "${PREFIX}swap_used\tn\t${SWAP_USED}"
echo -e "${PREFIX}swap_free\tn\t${SWAP_FREE}"
echo -e "${PREFIX}swap_perc_used\tn\t${SWAP_PERC_USED}"
